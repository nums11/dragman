<script type="text/javascript">

	var main = function() {

		var hb = document.getElementById('hotlinebling');
		var dd = document.getElementById('digitaldash');
		var lfmg = document.getElementById('lfmg');
		var br = document.getElementById('big-rings');
		var itp = document.getElementById('itp');
		var jp = document.getElementById('jumpman');

		hb.onended = function(){
			dd.play();
		}

		dd.onended = function(){
			lfmg.play();
		}

		lfmg.onended = function(){
			br.play();
		}

		br.onended = function(){
			itp.play();
		}

		itp.onended = function(){
			jp.play();
		}

		jp.onended = function(){
			hb.play();
		}

		$('.drakes-head').click(function(){

			$('.click-drake').addClass('none');
			$(this).addClass('none');


			$('#game-area').animate({
				left: '-100000px'
			}, 130000);	 

 			var score = 0;
     		window.setInterval(
     		function countscore() {
     			if($('#game-area').is(':animated')){
         			score = score + 1;
         			document.getElementById("score").value = score; 

         			$('#game-area').mouseleave(function(){
         				$(this).stop();
    					$('.game-over').addClass('unset');
						$('#game-area').fadeTo(1000,0.2);     				
         			});             
			   		
           		}

     		}, 100); 

			$('.music-note').hover(function(){
				$(this).toggle('explode');
				$('#game-area').stop();
				$('.game-over').addClass('unset');
				$('#game-area').fadeTo(1000,0.2);
			});		

		});		

	}	

	$(document).ready(main);

</script>