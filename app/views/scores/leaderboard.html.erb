	<div class="leaderboard">
		
		<h1>Leader Board</h1>

		<ol class="user-outline">
			
			<% @users.each do |x| %>
				<div class="user">	
				<li class="user-li">
					<div class= "nick-name"><%= x.nick_name %></div>
					<div class="score">Score:</div>
					<div class="score-number"><%= x.score %></div>
				</li>
				</div>
			<% end %>

		</ol>

		<div class="submit"><%= link_to 'Done', "/logout", :style => "text-decoration:none; color:white; font-size:22px; margin-top:12px;" %></div>

		<div class="submit" id="playagain"><%= link_to 'Play Again', "/play", :style => "text-decoration:none; color:white; font-size:22px; margin-top:12px;" %></div>

	</div>

